                        <div class="col-sm-3">
                            <select asp-for="Transportation" class="form-control" disabled asp-items="ViewBag.Transportation"></select>
                        </div>
                        <span asp-validation-for="Transportation" class="inline text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2 control-label no-padding-right">箱单发票附件上传</div>
