
@using  General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ImportTrans_main_record, SysCustomizedListSearchArg>
@{
    ViewData["Title"] = "发运条目";
    //bool canAddOrUpdate = Html.OwnPermission("editUser");
    //bool canResetPwd = Html.OwnPermission("resetPassword");
    //bool canDelete = Html.OwnPermission("deleteUser");
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li class="active">进口运输</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">

            <a asp-route="editlist" class="btn btn-sm btn-pink"><i class="glyphicon glyphicon-plus"></i>添加下拉列表</a>

        </div>
    </div>
    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itShipmentCreate" method="get" class="form-inline">
                        <label>关键字</label>
                        <input type="text" class="form-control" name="gjz" style="width:220px;" value="@Model.Paging.RouteArg.gjz" placeholder="账号、姓名、邮箱、手机号" />
                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                <thead>
                    <tr>
                        <th width="150px">编号</th>
                        <th width="100px">发货人</th>
                        <th width="100px">合同号</th>
                        <th width="100px">贸易条款</th>
                        <th width="100px">货物类型</th>
                        <th width="100px">发票金额</th>
                        <th width="100px">发票币种</th>
                        <th width="100px">实际收/提货日期</th>
                        <th width="100px">件数(箱数)</th>
                        <th width="100px">毛重</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                    <tr>
                        <td>@item.Itemno</td>
                        <td>@item.Shipper</td>
                        <td>@item.PoNo</td>
                        <td>@item.Incoterms</td>
                        <td>@item.CargoType</td>
                        <td>@item.Invamou</td>
                        <td>@item.Invcurr</td>
                        <td>@item.RealReceivingDate</td>
                        <td>@item.Pcs</td>
                        <td>@item.Gw</td>
                        <td>
                            <a href="@Url.RouteUrl("editlist",new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>修改</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <pager page-value="Model.Paging"></pager>

        </div>
    </div>
</div>



