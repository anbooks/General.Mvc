@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ImportTrans_main_record, SysCustomizedListSearchArg>

@{
    ViewData["Title"] = "发运条目";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>
           
            <a href="">进口运输</a>
        </li>
        <li class="active">发运条目</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a asp-route="editITShipmentCreate" class="btn btn-sm btn-pink"><i class="glyphicon glyphicon-plus"></i>添加发运条目</a>
        </div>
    </div>
    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itShipmentCreate" method="get" class="form-inline">

                        <label>关键字</label>
                        <input type="text" class="form-control" name="itemno" style="width:180px;" value="@Model.Paging.RouteArg.itemno" placeholder="编号" />
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发货人" />
                        <input type="text" class="form-control" name="pono" style="width:180px;" value="@Model.Paging.RouteArg.pono" placeholder="合同号" />
                        @Html.DropDownList("invcurr", ViewData["Companys"] as SelectList, "货币类型", new { @class = "form-control  input-small" })


                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-route="itShipmentCreate" method="post" id="formitShipmentCreate" class="form-horizontal" onsubmit="return false;">
        <div id='hello' style="z-index: 102; left: 240px; overflow: auto; width: 1350px;">
            <div class="form-group">
                @if (Model != null)
                {

                    <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                        <thead>
                            <tr>
                                <th width="100px"></th>
                                <th width="50px"></th>
                                <th width="150px">编号</th>
                                <th width="150px">发货人</th>
                                <th width="150px">合同号</th>
                                <th width="150px">贸易条款</th>
                                <th width="150px">货物类型</th>
                                <th width="150px">发票金额</th>
                                <th width="150px">发票币种</th>
                                <th width="150px">实际收/提货日期</th>
                                <th width="150px">件数(箱数)</th>
                                <th width="150px">毛重</th>
                                <th width="150px">采购员</th>
                                <th width="150px">要求到货时间</th>
                                <th width="150px">运输方式</th>
                                <th width="150px">运输状态</th>
                                <th width="150px">航班号/船名</th>
                                <th width="150px">起运港</th>
                                <th width="150px">目的港</th>
                                <th width="150px">主单号</th>
                                <th width="150px">分单号</th>
                                <th width="150px">计费重量</th>
                                <th width="150px">实际发运日期</th>
                                <th width="150px">实际到港日期</th>
                                <th width="150px">（口岸）报关行</th>
                                <th width="150px">核注清单号</th>
                                <th width="150px">提单日期</th>
                                <th width="150px">申报日期</th>
                                <th width="150px">放行日期</th>
                                <th width="150px">报关单号</th>
                                <th width="150px">报检单号</th>
                                <th width="150px">生成二检明细</th>
                                <th width="150px">要求送货日期</th>
                                <th width="150px">选择自行送货或外部提货</th>
                                <th width="150px">实际提/送货日期</th>
                                <th width="150px">是否核放</th>
                                <th width="150px">是否已生成报检单</th>

                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Data)
                            {
                            <tr>
                                <td>
                                    <a href="@Url.RouteUrl("editITShipmentCreate", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>修改</a>
                                </td>
                                <td>
                                    <input type="checkbox" name="sysResource" value="@item.Id" />
                                </td>
                                @if (ViewBag.QX == "管理员")
                                {
                                    <td>
                                        <input type="text" name="sysResource"value="@item.Itemno" />
                                    </td>
                                }
                                else
                                {
                                <td>@item.Itemno</td>
                                  }

                                <td>@item.Shipper</td>
                                <td>@item.PoNo</td>
                                <td>@item.Incoterms</td>
                                <td>@item.CargoType</td>
                                <td>@item.Invamou</td>
                                <td>
                                    @Html.DropDownList("invcurr", ViewData["Companys"] as SelectList, @item.Invcurr, new { @class = "form-control  input-small" })
                                </td>
                                <td>
                                    @item.RealReceivingDate
                                </td>
                                <td>@item.Pcs</td>
                                <td>@item.Gw</td>
                                <td>@item.Buyer</td>
                                <td>@item.RequestedArrivalTime</td>
                                <td>@item.ShippingMode</td>
                                <td>@item.Status</td>
                                <td>@item.FlighVessel</td>
                                <td>@item.Origin</td>
                                <td>@item.Dest</td>
                                <td>@item.Mbl</td>
                                <td>@item.Hbl</td>
                                <td>@item.Measurement</td>
                                <td>@item.Atd</td>
                                <td>@item.Ata</td>
                                <td>@item.Forwarder</td>
                                <td>
                                    <input type="text" name="sysResource" value=" @item.InventoryNo" />

                                </td>
                                <td>@item.BlDate</td>
                                <td>@item.DeclarationDate</td>
                                <td>@item.ReleaseDate</td>
                                <td>@item.CustomsDeclarationNo</td>
                                <td>@item.InspectionLotNo</td>
                                <td>@item.IsNeedSecondCheck</td>
                                <td>@item.DeliveryRequiredDate</td>
                                <td>@item.ChooseDelivery</td>
                                <td>@item.ActualDeliveryDate</td>
                                <td>
                                    <input type="text" name="sysResource" value=" @item.CheckAndPass" />

                                </td>
                                <td>@item.Declaration</td>

                                <td>

                                    <a href="@Url.RouteUrl("itShipmentCreateSchedule", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>查看明细表</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <pager page-value="Model.Paging"></pager>

                }
            </div>
        </div>
            <div class="col-md-offset-1">
                <button class="btn btn-info" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    确认创建
                </button>
            </div>
        
    </form>
    <script>
        $(function () {
            $('#formitShipmentCreate').submit(function () {
                var form = $(this);
                $.modal.confirm('您确定要保存此用户角色数据？', function () {
                    form.ajaxSubmit(function (data) {
                         
                    });
                });
            });
        });
    </script>
    <script src="WdatePicker/WdatePicker.js"></script>
    <link href="../../My97DatePicker/skin/WdatePicker.css" rel="stylesheet" type="text/css" />
    <script src="../../My97DatePicker/calendar.js" type="text/javascript"></script>
    <script src="../../My97DatePicker/WdatePicker.js" type="text/javascript"></script>
</div>


