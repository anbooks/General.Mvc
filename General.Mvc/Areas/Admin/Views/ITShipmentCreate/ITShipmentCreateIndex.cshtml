@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ImportTrans_main_record, SysCustomizedListSearchArg>
@{
    ViewData["Title"] = "发运条目";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>
            <a href="">进口运输</a>
        </li>
        <li class="active">发运条目</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a asp-route="editITShipmentCreate" class="btn btn-sm btn-pink"><i class="glyphicon glyphicon-plus"></i>添加发运条目</a>
        </div>
    </div>
    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itShipmentCreate" method="get" class="form-inline">
                        <label>关键字</label>
                        <input type="text" class="form-control" name="itemno" style="width:180px;" value="@Model.Paging.RouteArg.itemno" placeholder="编号" />
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发货人" />
                        <input type="text" class="form-control" name="pono" style="width:180px;" value="@Model.Paging.RouteArg.pono" placeholder="合同号" />
                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <form asp-route="itShipmentCreate" method="post" id="formitShipmentCreate" class="form-horizontal" onsubmit="return false;">
        <div id='hello' style="z-index: 102; left: 240px; overflow: auto; width: 1670px;">
            <div class="form-group">
                @if (Model != null)
                {
                    <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                        <thead>
                            <tr>
                                <th width="50px"></th>
                                <th width="30px"></th>
                                <th width="100px">编号</th>
                                <th width="100px">发货人</th>
                                <th width="100px">合同号</th>
                                <th width="100px">贸易条款</th>
                                <th width="100px">货物类型</th>
                                <th width="100px">发票金额</th>
                                <th width="100px">发票币种</th>
                                <th width="150px">实际收/提货日期</th>
                                <th width="100px">件数(箱数)</th>
                                <th width="100px">毛重</th>
                                
                                <th width="100px">箱单发票</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                            <tr>
                                <td>
                                    <a href="@Url.RouteUrl("editITShipmentCreate", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>修改</a>
                                </td>
                                <td>
                                    <input type="checkbox" name="checkboxId" value="@item.Id" />
                                </td>
                                @if (ViewBag.QX == "管理员")
                                {
                                    @if (@item.Itemno == "捷诚伯仲-2020-300")
                                    {
                                        <td>
                                            <input type="text" name="Itemno" style="background-color:red;width:120px" value="@item.Itemno" />
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <input style="width:120px"type="text" name="Itemno" value="@item.Itemno" disabled />
                                        </td>
                                    }
                                }
                                else
                                {
                                    <td>
                                        <input style="width:120px"type="text" name="Itemno" value="@item.Itemno" disabled />
                                    </td>
                                }
                              
                                    <td>
                                        <input style="width:100px"type="text" name="Shipper" value="@item.Shipper" />
                                    </td>
                              
                             
                                    <td>
                                        <input style="width:100px"type="text" name="PoNo" value="@item.PoNo" />
                                    </td>
                              
                              
                                    <td>
                                        <input style="width:100px"type="text" name="Incoterms" value="@item.Incoterms" />
                                    </td>
                               
                             
                                    <td>
                                        <input style="width:100px"type="text" name="CargoType" value="@item.CargoType" />
                                    </td>
                               
                                    <td>
                                        <input style="width:100px"type="text" name="Invamou" value="@item.Invamou" />
                                    </td>
                              
                                    @if (@item.Invcurr == null)
                                    {
                                        <td>
                                            @Html.DropDownList("Invcurr", ViewData["Invcurr"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.DropDownList("Invcurr", ViewData["Invcurr"] as SelectList, @item.Invcurr, new { @class = "form-control  input-small" })
                                        </td>
                                    }
                                    @if (@item.RealReceivingDate == null)
                                    {
                                        <td>
                                            <input style="width:130px"type="date" name="RealReceivingDate" value="@item.RealReceivingDate" />
                                        </td>}
                                    else
                                    {
                                        <td>
                                            <input style="width:130px"type="date" name="RealReceivingDate" value="@item.RealReceivingDate.Value.ToString("yyyy-MM-dd")" />
                                        </td>}
                              
                                    <td>
                                        <input style="width:100px"type="text" name="Pcs" value="@item.Pcs" />
                                    </td>
                               
                                    <td>
                                        <input style="width:100px"type="text" name="Gw" value="@item.Gw" />
                                    </td>
                                <td>
                                    @if (@item.InventoryAttachment != null&& @item.InventoryAttachment !="")
                                    {
                                        <a href="@Url.RouteUrl("downLoadInventory", new { id = item.Id })" class="btn btn-xs btn-info"><i class="fa fa-bolt"></i>下载附件</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.RouteUrl("editITShipmentCreate", new { id = item.Id })" class="btn btn-xs btn-danger btnDelete"><i class="fa fa-bolt"></i>上传附件</a>
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <pager page-value="Model.Paging"></pager>
                }
            </div>
        </div>
        <div class="col-md-offset-1">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                确认创建
            </button>
        </div>
    </form>
    <script>
        $(function () {
            $('#formitShipmentCreate').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(1).find("input:checkbox");
                    var itemno = $(this).closest("tr").find("td").eq(2).find("input:text");
                    var shipper = $(this).closest("tr").find("td").eq(3).find("input:text");
                    var pono = $(this).closest("tr").find("td").eq(4).find("input:text");
                    var incoterms = $(this).closest("tr").find("td").eq(5).find("input:text");
                    var cargotype = $(this).closest("tr").find("td").eq(6).find("input:text");
                    var invamou = $(this).closest("tr").find("td").eq(7).find("input:text");
                    var invcurr = $(this).closest("tr").find("td").eq(8).find("select[name='Invcurr']");
                    var realreceivingdate = $(this).closest("tr").find("td").eq(9).find("input:data");
                    var pcs = $(this).closest("tr").find("td").eq(10).find("input:text");
                    var gw = $(this).closest("tr").find("td").eq(11).find("input:text");
                    var mSub = {
                        id: id.val(),
                        itemno: itemno.val(),
                        shipper: shipper.val(),
                        pono: pono.val(),
                        incoterms: incoterms.val(),
                        cargotype: cargotype.val(),
                        invamou: invamou.val(),
                        invcurr: invcurr.val(),
                        realreceivingdate: realreceivingdate.val(),
                        gw: gw.val(),
                        pcs: pcs.val(),
                    };
                    subArray.push(mSub);
                });
                alert(JSON.stringify(subArray));
                var _url = "/admin/itShipmentCreate/itShipmentCreateList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        var rs = data;
                        if (rs.status == true) {
                            alert('提交成功！');
                        } else {
                            alert('提交失败！数据有误！！！');
                            window.parent.location.reload();
                        }
                    }
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转
            });
        });
    </script>
</div>


