@using General.Entities
@using General.Framework.Menu
@model UserRoleViewModel
@{
    ViewData["Title"] = "用户角色";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li><a href="@Url.RouteUrl("userIndex")">系统用户</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-content">
    <h1>@ViewBag.Title</h1>
    <hr />

    <div class="space-2"></div>
    <form asp-route="roleDetail" method="post" id="formRoleDetail" class="form-horizontal" onsubmit="return false;">
        @if (Model != null)
        {
            int i = 1;
            <div class="row">
                <div class="col-sm-12">
                    <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                        <thead>
                            <tr>
                                <th width="100px"></th>
                                <th width="300px">名称</th>
                                <th width="200px">时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.RoleList)
                            {
                                <tr>
                                    <td>
                                        @if (Model.UserRoleList.Any(o => o.UserId == ViewBag.Userid && o.RoleId == item.Id))
                                        {
                                            <input type="radio" name="sysResource" value="@item.Id & ViewBag.Userid" checked="checked" />
                                        }
                                        else
                                        {
                                            <input type="radio" name="sysResource" value="@item.Id & ViewBag.Userid" />
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.CreationTime.ToString("F")</td>
                                    <td>
                                        <a href="@Url.RouteUrl("editRole",new { roleid = item.Id })" class="btn btn-xs btn-info"><i class="glyphicon glyphicon-pencil"></i>修改</a>
                                        <a href="@Url.RouteUrl("deleteRole",new { roleid = item.Id })" class="btn btn-xs btn-danger"><i class="glyphicon glyphicon-trash"></i>删除</a>
                                        <a href="@Url.RouteUrl("roleUser",new { id = item.Id,userid=ViewBag.Userid })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>设置权限</a>
                                        @*@PermissionRouteLinkIcon("", "editRole", new RouteValueDictionary(new { id = item.Id }), new { @class = "btn btn-xs btn-info", title = "修改" }, new { @class = "glyphicon glyphicon-pencil" })
                                        @PermissionRouteLinkIcon("", "deleteRole", new RouteValueDictionary(new { id = item.Id }), new { @class = "btn btn-xs btn-danger btnDelete", title = "删除" }, new { @class = "glyphicon glyphicon-trash" })
                                        @PermissionRouteLinkIcon("权限", "rolePermission", new RouteValueDictionary(new { id = item.Id }), new { @class = "btn btn-xs btn-purple", title = "设置权限" }, new { @class = "fa fa-bolt" })*@

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-offset-1">
                <button class="btn btn-info" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    提交保存
                </button>
            </div>           
            <script>
                $(function () {
                    $('#formRoleDetail').submit(function () {
                        var form = $(this);
                        $.modal.confirm('您确定要保存此用户角色数据？', function () {
                            form.ajaxSubmit(function (data) {
                                $.modal.alert(data);
                            });
                        });
                    });
                });
            </script>
        }
    </form>
</div>






