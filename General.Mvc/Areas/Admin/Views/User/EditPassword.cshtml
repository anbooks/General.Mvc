@{
    ViewData["Title"] = "ITShipmentCreateIndex";
}


@using General.Entities
@model ModifyModel
@{
    ViewData["Title"] = "编辑系统用户";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li><a href="@ViewBag.ReturnUrl">系统用户列表</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>

<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-route="password" method="post" class="form-horizontal">


                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">原密码</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="OriginalPassword" class="form-control" placeholder="原密码" />
                    </div>
                    <span asp-validation-for="OriginalPassword" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">新密码</label>
                    <div class="col-sm-5">
                        <input type="text" asp-for="ModifiedPassword" class="form-control" placeholder="新密码" />
                    </div>
                    <span asp-validation-for="ModifiedPassword" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">确认密码</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="ConfirmedPassword" class="form-control" placeholder="确认密码" />
                    </div>
                    <span asp-validation-for="ConfirmedPassword" class="inline text-danger "></span>
                </div>
               
                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        提交
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
