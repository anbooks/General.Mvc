@using General.Entities
@model ImportTrans_main_record
@{
    ViewData["Title"] = "口岸报关行信息填报";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li><a href="@ViewBag.ReturnUrl">进口运输</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>

<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-route="edititPortCustomerBrokerInput" method="post" class="form-horizontal">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">提单日期</label>
                    <div class="col-sm-3">
                        <input type="date" class="form-control" asp-for="BlDate" placeholder="提单日期" />
                    </div>
                    <span class="inline text-danger" asp-validation-for="BlDate"></span>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">申报日期</label>
                    <div class="col-sm-3">
                        <input type="date" class="form-control" asp-for="DeclarationDate" placeholder="申报日期" />
                    </div>
                    <span class="inline text-danger" asp-validation-for="DeclarationDate"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">放行日期</label>
                    <div class="col-sm-3">
                        <input type="date" class="form-control" asp-for="ReleaseDate" placeholder="放行日期" />
                    </div>
                    <span class="inline text-danger" asp-validation-for="ReleaseDate"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">报关单号</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" asp-for="CustomsDeclarationNo" placeholder="报关单号" />
                    </div>
                    <span class="inline text-danger" asp-validation-for="CustomsDeclarationNo"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">报检单号</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" asp-for="InspectionLotNo" placeholder="报检单号" />
                    </div>
                    <span class="inline text-danger" asp-validation-for="InspectionLotNo"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">是否需要二检</label>
                      <div class="radio">
                      <label>
                        @Html.RadioButtonFor(m => m.IsNeedSecondCheck, "true", new { @class = "ace", id = "sex1" })
                      <span class="lbl"> 是</span>
                     </label>
                      <label>
                      @Html.RadioButtonFor(m => m.IsNeedSecondCheck, "false", new { @class = "ace", id = "sex2" })
                       <span class="lbl"> 否</span>
                    </label>
                 </div>
</div>
                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        提交
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>