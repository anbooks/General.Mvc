@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<Order, SysCustomizedListSearchArg>

@{
    ViewData["Title"] = "订单导入";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>

            <a href="">进口运输</a>
        </li>
        <li class="active">核注清单</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a asp-route="itBuyerSchedule" class="btn btn-sm btn-pink"><i class="glyphicon glyphicon-plus"></i>返回明细</a>

        </div>
    </div>

    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itInventoryInput" method="get" class="form-inline">

                        <label>关键字</label>
                        <input type="text" class="form-control" name="itemno" style="width:180px;" value="@Model.Paging.RouteArg.itemno" placeholder="编号" />
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发货人" />
                        <input type="text" class="form-control" name="pono" style="width:180px;" value="@Model.Paging.RouteArg.pono" placeholder="合同号" />
                        @Html.DropDownList("invcurr", ViewData["Companys"] as SelectList, "货币类型", new { @class = "form-control  input-small" })


                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-route="itOrderImportIndex" method="post" id="formitBuyer" class="form-horizontal" onsubmit="return false;">
        <div id='hello' style="z-index: 102; left: 240px; overflow: auto; width: 1670px;" class="form-group">
            @if (Model != null)
            {
                <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                    <thead>
                        <tr>
                            <th width="30px"></th>
                            <th width="80px">订单号</th>
                            <th width="80px">订单行号</th>
                            <th width="80px">索引号</th>
                            <th width="80px">物料代码</th>
                            <th width="80px">名称</th>
                            <th width="80px">牌号</th>
                            <th width="80px">规范</th>
                            <th width="80px">规格</th>
                            <th width="80px">宽</th>
                            <th width="80px">长</th>
                            <th width="80px">包装规格</th>
                            <th width="80px">订单数量</th>
                            <th width="80px">订单单位</th>
                            <th width="80px">币种</th>
                            <th width="80px">单价</th>
                            <th width="80px">总价</th>
                            <th width="80px">交货日期</th>
                            <th width="80px">制造商</th>
                            <th width="80px">原产国</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkboxId" value="@item.Id" /></td>
                                <td>@item.OrderNo</td>
                                <td>@item.Item</td>
                                <td>@item.PlanItem</td>
                                <td>@item.MaterialCode</td>
                                <td>@item.Name</td>
                                <td>@item.PartNo</td>
                                <td>@item.Specification</td>
                                <td>@item.Size</td>
                                <td>@item.Width</td>
                                <td>@item.Length</td>
                                <td>@item.Package</td>
                                <td>@item.Qty</td>
                                <td>@item.Unit</td>
                                <td>@item.Currency</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.TotalPrice</td>
                                <td>@item.LeadTime</td>
                                <td>@item.Manufacturer</td>
                                <td>@item.Origin</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
                <pager page-value="Model.Paging"></pager>
            }
        </div>
        <div class="col-md-offset-1">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                确认创建
            </button>
        </div>
    </form>

    <script>
        $(function () {
            $('#formitBuyer').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(0).find("input:checkbox");
                    var mSub = {
                        id: id.val(),
                    };
                    subArray.push(mSub);
                });
                alert(JSON.stringify(subArray));
                var _url = "/admin/itBuyer/itOrderBuyerList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        var rs = data;
                        if (rs.status == true) {
                            alert('提交成功！');
                        } else {
                            alert('提交失败！数据有误！！！');
                            window.parent.location.reload();
                        }
                    }
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转
            });
        });
    </script>
    <script src="WdatePicker/WdatePicker.js"></script>
    <link href="../../My97DatePicker/skin/WdatePicker.css" rel="stylesheet" type="text/css" />
    <script src="../../My97DatePicker/calendar.js" type="text/javascript"></script>
    <script src="../../My97DatePicker/WdatePicker.js" type="text/javascript"></script>
</div>

