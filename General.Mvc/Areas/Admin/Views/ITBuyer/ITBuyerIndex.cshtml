@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ImportTrans_main_record, SysCustomizedListSearchArg>

@{
    ViewData["Title"] = "采购员";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>

            <a href="">进口运输</a>
        </li>
        <li class="active">采购员</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>

    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itBuyer" method="get" class="form-inline">
                        <label>关键字</label>
                        <input type="text" class="form-control" name="itemno" style="width:180px;" value="@Model.Paging.RouteArg.itemno" placeholder="编号" />
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发货人" />
                        <input type="text" class="form-control" name="pono" style="width:180px;" value="@Model.Paging.RouteArg.pono" placeholder="合同号" />
                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-route="itBuyer" method="post" id="formitBuyer" class="form-horizontal" onsubmit="return false;">
        <div id='hello' style="z-index: 102; left: 240px; overflow: auto; width: 1670px;">
            <div class="form-group">
                @if (Model != null)
                {
                    <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                        <thead>
                            <tr>
                                <th width="50px"></th>
                                <th width="30px"></th>
                                <th width="100px">编号</th>
                                <th width="100px">发货人</th>
                                <th width="100px">合同号</th>
                                <th width="100px">贸易条款</th>
                                <th width="100px">货物类型</th>
                                <th width="100px">发票金额</th>
                                <th width="80px">发票币种</th>
                                <th width="100px">实际收/提货日期</th>
                                <th width="80px">件数(箱数)</th>
                                <th width="80px">毛重</th>
                                <th width="50px">采购员</th>
                                <th width="100px">要求到货时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.RouteUrl("edititBuyer", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>修改</a>
                                    </td>
                                    <td>
                                        <input type="checkbox" name="checkboxId" value="@item.Id" />
                                        <input type="hidden" name="checkboxValue" value="0" />
                                    </td>
                                    <td>@item.Itemno</td>
                                    <td>@item.Shipper</td>
                                    <td>@item.PoNo</td>
                                    <td>@item.Incoterms</td>
                                    <td>@item.CargoType</td>
                                    <td>@item.Invamou</td>
                                    <td>@item.Invcurr</td>
                                    <td>@item.RealReceivingDate</td>
                                    <td>@item.Pcs</td>
                                    <td>@item.Gw</td>
                                    <td>@item.Buyer</td>
                                    @if (ViewBag.QX == @item.Buyer)
                                    {
                                        @if (@item.RequestedArrivalTime == null)
                                        {
                                            <td>
                                                <input type="date" name="RequestedArrivalTime" value="@item.RequestedArrivalTime" />
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <input type="date" name="RequestedArrivalTime" value="@item.RequestedArrivalTime.Value.ToString("yyyy-MM-dd")" />
                                            </td>
                                        }
                                    }
                                    else
                                    {
                                        <td>
                                            <input type="date" name="RequestedArrivalTime" value="@item.RequestedArrivalTime" disabled />
                                        </td>
                                    }
                                    @if (@item.F_ShippingModeGiven!=true)
                                    {
                                        <td>
                                            <a href="@Url.RouteUrl("itBuyerSchedule", new { id = item.Id })" class="btn btn-xs btn-danger btnDelete"><i class="fa fa-bolt"></i>查看明细表</a>
                                        </td> 
                                    }
                                    else
                                    {
                                        <td>
                                            <a href="@Url.RouteUrl("itBuyerSchedule", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>查看明细表</a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                    <pager page-value="Model.Paging"></pager>
                }
            </div>
        </div>
        <div class="col-md-offset-1">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                确认创建
            </button>
        </div>
    </form>
    <script>
        $(function () {
            $('#formitBuyer').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(1).find("input:checkbox");
                    var requestedArrivalTime = $(this).closest("tr").find("td").eq(13).find("input:data");

                    //  var invcurr = $(this).closest("tr").find("td").eq(3).find("select[name='invcurr']");
                    //var test1 = $(this).next();
                    var mSub = {
                        id: id.val(),
                        requestedArrivalTime: requestedArrivalTime.val(),
                    };
                    subArray.push(mSub);
                });
                //  alert(JSON.stringify(subArray));
                var _url = "/admin/itBuyer/itBuyerList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        var rs = data;
                        if (rs.status == true) {
                            alert('提交成功！');
                        } else {
                            alert('提交失败！数据有误！！！');
                            window.parent.location.reload();
                        }
                    }
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转
            });

        });
    </script>


</div>


