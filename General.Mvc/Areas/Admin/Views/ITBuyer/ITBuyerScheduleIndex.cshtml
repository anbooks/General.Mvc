@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<Schedule, SysCustomizedListSearchArg>

@{
    ViewData["Title"] = "明细表";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>

            <a href="">进口运输</a>
        </li>

        <li class="active">明细表</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a asp-route="itOrderBuyerIndex" class="btn btn-sm btn-pink"><i class="glyphicon glyphicon-plus"></i>添加明细</a>
           
        </div>
    </div>
    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itBuyerSchedule" method="get" class="form-inline">
                        @Html.AntiForgeryToken()
                        @Html.Hidden("Id", 1)
                        <label>关键字</label>
                        <input type="text" class="form-control" name="materiel" style="width:180px;" value="@Model.Paging.RouteArg.materiel" placeholder="物料号" />


                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-route="itBuyerSchedule" method="post" id="formitBuyer" class="form-horizontal" onsubmit="return false;">
        @Html.AntiForgeryToken()
        @Html.Hidden("Id", 1)
        <div class="form-group">
            @if (Model != null)
            {

                <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                    <thead>
                        <tr>
                            <th width="40px"></th>
                            <th width="100px">发票号</th>
                            <th width="100px">订单号</th>
                            <th width="100px">物料号</th>
                            <th width="100px">短文本</th>
                            <th width="100px">订单单位</th>
                            <th width="100px">采购订单数量</th>
                            <th width="100px">净价</th>
                            <th width="100px">订单净值</th>
                            <th width="100px">批号</th>
                            <th width="100px">运单</th>

                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                        <tr>
                            <td>
                                <input type="checkbox" name="checkboxId" value="@item.Id" checked disabled />
                                <input type="hidden" name="checkboxValue" value="0" />
                            </td>
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="InvoiceNo" value="@item.InvoiceNo" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="InvoiceNo" value="@item.InvoiceNo" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="PurchasingDocuments" value="@item.PurchasingDocuments" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="PurchasingDocuments" value="@item.PurchasingDocuments" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="MaterielNo" value="@item.MaterielNo" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="MaterielNo" value="@item.MaterielNo" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="ShortTxt" value="@item.ShortTxt" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="ShortTxt" value="@item.ShortTxt" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="OrderUnit" value="@item.OrderUnit" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="OrderUnit" value="@item.OrderUnit" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="PurchaseOrderQuantity" value="@item.PurchaseOrderQuantity" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="PurchaseOrderQuantity" value="@item.PurchaseOrderQuantity" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="NetPrice" value="@item.NetPrice" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="NetPrice" value="@item.NetPrice" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="NetOrder" value="@item.NetOrder" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="NetOrder" value="@item.NetOrder" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="BatchNo" value="@item.BatchNo" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="BatchNo" value="@item.BatchNo" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == "01")
                            {
                                <td>
                                    <input type="text" name="Waybill" value="@item.Waybill" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="Waybill" value="@item.Waybill" disabled style="width:100px" />
                                </td>
                            }
                           
                            <td>
                                <a href="@Url.RouteUrl("editBuyerSchedule", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>修改</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <pager page-value="Model.Paging"></pager>

            }
        </div>
        <div class="col-md-offset-1">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                确认创建
            </button>
        </div>
    </form>
    <script>
        $(function () {
            $('#formitBuyer').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(0).find("input:checkbox");
                    var invoiceNo = $(this).closest("tr").find("td").eq(1).find("input:text");
                    var purchasingDocuments = $(this).closest("tr").find("td").eq(2).find("input:text");
                    var materielNo = $(this).closest("tr").find("td").eq(3).find("input:text");
                    var shortTxt = $(this).closest("tr").find("td").eq(4).find("input:text");
                    var orderUnit = $(this).closest("tr").find("td").eq(5).find("input:text");
                    var purchaseOrderQuantity = $(this).closest("tr").find("td").eq(6).find("input:text");
                    var netPrice = $(this).closest("tr").find("td").eq(7).find("input:text");
                    var netOrder = $(this).closest("tr").find("td").eq(8).find("input:text");
                    var batchNo = $(this).closest("tr").find("td").eq(9).find("input:text");
                    var waybill = $(this).closest("tr").find("td").eq(10).find("input:text");
                    

                    var mSub = {
                        id: id.val(),
                        invoiceNo: invoiceNo.val(),
                        purchasingDocuments: purchasingDocuments.val(),
                        materielNo: materielNo.val(),
                        shortTxt: shortTxt.val(),
                        orderUnit: orderUnit.val(),
                        purchaseOrderQuantity: purchaseOrderQuantity.val(),
                        netPrice: netPrice.val(),
                        netOrder: netOrder.val(),
                        batchNo: batchNo.val(),
                        waybill: waybill.val(),
                    };
                    subArray.push(mSub);
                });
                alert(JSON.stringify(subArray));
                var _url = "/admin/itBuyer/itBuyerScheduleList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        alert('提交成功！');
                    }
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转


            });

        });
    </script>

</div>


