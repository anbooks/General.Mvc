                                </button>  <a asp-route="excelimportasj" class="btn btn-sm btn-pink">生成送检单</a>
                                <a asp-route="excelimportBuyer" class="btn btn-sm btn-pink">明细表导出</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <form enctype="multipart/form-data" method="post" asp-route="importexcelschedule">
                <div align="left" style="float:left">
                    <input type="file" name="excelfile" />
                </div>
                <div>
                    <input type="submit" value="明细表导入" />
                </div>
            </form>
        </div>
    </div>
    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
