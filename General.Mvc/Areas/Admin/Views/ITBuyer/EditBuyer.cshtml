@using General.Entities
@model ImportTrans_main_record
@{
    ViewData["Title"] = "编辑发运条目";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li><a href="@ViewBag.ReturnUrl">系统用户列表</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>

<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-route="edititBuyer" method="post" class="form-horizontal">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="All"></div>



                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">@Html.RequiredSpan()编号</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" asp-for="Itemno" placeholder="编号" />
                    </div>
                    <span class="inline text-danger" asp-validation-for="Itemno"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">发货人</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="Shipper" class="form-control" placeholder="发货人" />
                    </div>
                    <span asp-validation-for="Shipper" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">订单号</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="PoNo" class="form-control" placeholder="订单号" />
                    </div>
                    <span asp-validation-for="PoNo" class="inline text-danger "></span>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">货币类型</label>
                    <div class="col-sm-3">
                        <select asp-for="Invcurr" class="form-control" asp-items="ViewBag.Invcurrlist"></select>
                    </div>
                    <span asp-validation-for="Invcurr" class="inline text-danger"></span>
                </div>



                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        提交
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>