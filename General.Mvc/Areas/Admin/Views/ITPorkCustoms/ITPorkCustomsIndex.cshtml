@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ImportTrans_main_record, SysCustomizedListSearchArg>

@{
    ViewData["Title"] = "发运条目";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>
           
            <a href="">进口运输</a>
        </li>
        <li class="active">物流员</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a asp-route="editITPorkCustoms" class="btn btn-sm btn-pink"><i class="glyphicon glyphicon-plus"></i>添加发运条目</a>
            <a asp-route="excelPorkCustoms" class="btn btn-sm btn-pink">数据导出</a>
            <form enctype="multipart/form-data" method="post" asp-route="importexcel2">
                <div align="left" style="float:left">
                    <input type="file" name="excelfile" />
                </div>
                <div>
                    <input type="submit" value="数据导入" />
                </div>
            </form>
        </div>
    </div>
    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itPorkCustoms" method="get" class="form-inline">

                        <label>关键字</label>
                        <input type="text" class="form-control" name="itemno" style="width:180px;" value="@Model.Paging.RouteArg.itemno" placeholder="编号" />
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发货人" />
                        <input type="text" class="form-control" name="pono" style="width:180px;" value="@Model.Paging.RouteArg.pono" placeholder="合同号" />
                         <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-route="itPorkCustoms" method="post" id="formitPorkCustoms" class="form-horizontal" onsubmit="return false;">
        <div id='hello' style="z-index: 102; left: 240px; overflow: auto; width: 1670px;">
            <div class="form-group">
                @if (Model != null)
                {

                    <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                        <thead>
                            <tr>
                                <th width="60px"></th>
                                <th width="50px"></th>
                                <th width="80px">编号</th>
                                <th width="80px">发货人</th>
                                <th width="80px">合同号</th>
                                <th width="80px">贸易条款</th>
                                <th width="80px">货物类型</th>
                                <th width="80px">实际收/提货日期</th>
                                <th width="80px">件数(箱数)</th>
                                <th width="80px">毛重</th>
                                <th width="80px">运输方式</th>
                                <th width="80px">要求送货日期</th>
                                <th width="80px">提单日期</th>
                                <th width="80px">申报日期</th>
                                <th width="80px">放行日期</th>
                                <th width="80px">报关单号</th>
                                <th width="80px">报检单号</th>
                                <th width="80px">自行送货或外部提货</th>
                                <th width="80px">实际提/送货日期</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Data)
                            {
                            <tr>
                                <td>
                                    <a href="@Url.RouteUrl("editITPorkCustoms", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>修改</a>
                                </td>
                                <td>
                                    <input type="checkbox" name="checkboxId" value="@item.Id" />
                                    <input type="hidden" name="checkboxValue" value="0" />
                                </td>
                                <td>
                                    @item.Itemno
                                </td>
                                <td>
                                    @item.Shipper
                                </td>
                                <td>@item.PoNo</td>
                                <td>@item.Incoterms</td>
                                <td>@item.CargoType</td>

                                <td>
                                    @item.RealReceivingDate
                                </td>
                                <td>@item.Pcs</td>
                                <td>@item.Gw</td>
                               <td> @item.ShippingMode</td>
                            <td>@item.DeliveryRequiredDate</td>
                                @if (ViewBag.QX == "01")
                                {
                                    @if (@item.BlDate == null)
                                    {
                                        <td>
                                            <input type="date" name="BlDate" value="@item.BlDate" />
                                        </td>}
                                    else
                                    {
                                        <td>
                                            <input type="date" name="BlDate" value="@item.BlDate.Value.ToString("yyyy-MM-dd")" />
                                        </td>}

                                }
                                else
                                {
                                    <td>
                                        <input type="datetime" name="BlDate" value="@item.BlDate" disabled />
                                    </td>
                                }
                                @if (ViewBag.QX == "01")
                                {
                                    @if (@item.DeclarationDate == null)
                                    {
                                        <td>
                                            <input type="date" name="DeclarationDate" value="@item.DeclarationDate" />
                                        </td>}
                                    else
                                    {
                                        <td>
                                            <input type="date" name="DeclarationDate" value="@item.DeclarationDate.Value.ToString("yyyy-MM-dd")" />
                                        </td>}

                                }
                                else
                                {
                                    <td>
                                        <input type="datetime" name="DeclarationDate" value="@item.DeclarationDate" disabled />
                                    </td>
                                }
                                @if (ViewBag.QX == "01")
                                {
                                    @if (@item.ReleaseDate == null)
                                    {
                                        <td>
                                            <input type="date" name="ReleaseDate" value="@item.ReleaseDate" />
                                        </td>}
                                    else
                                    {
                                        <td>
                                            <input type="date" name="ReleaseDate" value="@item.ReleaseDate.Value.ToString("yyyy-MM-dd")" />
                                        </td>}

                                }
                                else
                                {
                                    <td>
                                        <input type="datetime" name="ReleaseDate" value="@item.ReleaseDate" disabled />
                                    </td>
                                }
                                @if (ViewBag.QX == "01")
                                {
                                    <td>
                                        <input type="text" name="CustomsDeclarationNo" value="@item.CustomsDeclarationNo" style="width:80px" />
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <input type="text" name="CustomsDeclarationNo" value="@item.CustomsDeclarationNo" disabled style="width:80px" />
                                    </td>
                                }
                                @if (ViewBag.QX == "01")
                                {
                                    <td>
                                        <input type="text" name="InspectionLotNo" value="@item.InspectionLotNo" style="width:80px" />
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <input type="text" name="InspectionLotNo" value="@item.InspectionLotNo" disabled style="width:80px" />
                                    </td>
                                }
                                @if (ViewBag.QX == "01")
                                {
                                    @if (@item.ChooseDelivery == null)
                                    {
                                        <td>
                                            @Html.DropDownList("ChooseDelivery", ViewData["ChooseDelivery"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.DropDownList("ChooseDelivery", ViewData["ChooseDelivery"] as SelectList, @item.ChooseDelivery, new { @class = "form-control  input-small" })
                                        </td>
                                    }

                                }
                                else
                                {
                                    <td>

                                        <input type="text" name="ChooseDelivery" value="@item.ChooseDelivery" disabled style="width:80px" />
                                    </td>
                                }
                                @if (ViewBag.QX == "01")
                                {
                                    @if (@item.ActualDeliveryDate == null)
                                    {
                                        <td>
                                            <input type="date" name="ActualDeliveryDate" value="@item.ActualDeliveryDate" />
                                        </td>}
                                    else
                                    {
                                        <td>
                                            <input type="date" name="ActualDeliveryDate" value="@item.ActualDeliveryDate.Value.ToString("yyyy-MM-dd")" />
                                        </td>}

                                }
                                else
                                {
                                    <td>
                                        <input type="datetime" name="ActualDeliveryDate" value="@item.ActualDeliveryDate" disabled />
                                    </td>
                                }
                                <td>
                                    <a href="@Url.RouteUrl("itPorkCustomsSchedule", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>查看明细表</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <pager page-value="Model.Paging"></pager>

                }
            </div>
        </div>
        <div class="col-md-offset-1">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                确认创建
            </button>
        </div>

    </form>
    <script>
        $(function () {
            $('#formitPorkCustoms').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {                
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(1).find("input:checkbox");
                  
                    
                    //var shippingMode = $(this).closest("tr").find("td").eq(12).find("select[name='ShippingMode']");
                    //var deliveryRequiredDate = $(this).closest("tr").find("td").eq(13).find("input:data");
                    var blDate = $(this).closest("tr").find("td").eq(12).find("input:data");
                    var declarationDate = $(this).closest("tr").find("td").eq(13).find("input:data");
                    var releaseDate = $(this).closest("tr").find("td").eq(14).find("input:data");
                    var customsDeclarationNo = $(this).closest("tr").find("td").eq(15).find("input:text");
                    var inspectionLotNo = $(this).closest("tr").find("td").eq(16).find("input:text");
                    var chooseDelivery = $(this).closest("tr").find("td").eq(17).find("select[name='ChooseDelivery']");
                    var actualDeliveryDate = $(this).closest("tr").find("td").eq(18).find("input:data");
                    var mSub = {
                        id: id.val(),
                        blDate: blDate.val(),
                        declarationDate: declarationDate.val(),
                        releaseDate: releaseDate.val(),
                        customsDeclarationNo: customsDeclarationNo.val(),
                        inspectionLotNo: inspectionLotNo.val(),
                        chooseDelivery: chooseDelivery.val(),
                        actualDeliveryDate: actualDeliveryDate.val(),
                    };
                    subArray.push(mSub);
                });
                alert(JSON.stringify(subArray));
                var _url = "/admin/itPorkCustoms/itPorkCustomsList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        alert('提交成功！');
                    }
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转


            });

        });
    </script>


</div>


