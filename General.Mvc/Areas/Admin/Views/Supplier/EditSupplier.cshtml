@using General.Entities
@model Supplier
@{
    ViewData["Title"] = "编辑供应商信息";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li><a href="@ViewBag.ReturnUrl">系统用户列表</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>

<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-route="editSupplier" method="post" class="form-horizontal">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="All"></div>
              
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">供应商代码 @Html.RequiredSpan()</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" asp-for="SupplierCode" placeholder="自定义项类别" />
                        </div>
                        <span class="inline text-danger" asp-validation-for="SupplierCode"></span>
                    </div>
      
               
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">供应商名称</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="Describe" class="form-control" placeholder="供应商名称" />
                    </div>
                    <span asp-validation-for="Describe" class="inline text-danger "></span>
                </div>
               

                
                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        提交
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>