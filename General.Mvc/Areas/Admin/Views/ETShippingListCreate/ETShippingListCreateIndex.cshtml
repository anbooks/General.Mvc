
@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ExportTransportation, SysCustomizedListSearchArg>

@{
    ViewData["Title"] = "创建发运清单";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>

            <a href="">出口运输</a>
        </li>
        <li class="active">创建发运清单</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>

    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="etShippingListCreate" method="get" class="form-inline">

                        <label>关键字</label>
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发运情况选择" />

                        @Html.DropDownList("invcurr", ViewData["Companys"] as SelectList, "付款方式", new { @class = "form-control  input-small" })


                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-route="etShippingListCreate" method="post" id="formetShippingListCreate" class="form-horizontal" onsubmit="return false;">

        <div class="form-group">
            @if (Model != null)
            {

                <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                    <thead>
                        <tr>
                            <th width="50px"></th>
                            <th width="150px">编号</th>
                            <th width="150px">发运情况选择</th>
                            <th width="150px">付费方式</th>
                            <th width="150px">原进口报关单号</th>
                            <th width="150px">项目</th>
                            <th width="150px">申请人</th>
                            <th width="150px">品名</th>
                            <th width="150px">总件数</th>
                            <th width="150px">总毛重</th>
                            <th width="150px">贸易条款</th>
                            <th width="150px">国内段承运人</th>
                            <th width="150px">提货司机</th>
                            <th width="150px">司机身份证号</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Data)
                        {
                        <tr>
                            @if (ViewBag.QX == null)
                            {

                                <td >
                                    <input type="checkbox" name="checkboxId" value="@item.Id" checked disabled/>
                                    <input type="hidden" name="checkboxValue" value="0" />
                                </td>}
                            else
                            {
                                <td>
                                    <input type="checkbox" name="checkboxId" value="@item.Id" checked disabled />
                                    <input type="hidden" name="checkboxValue" value="0" />
                                </td>}
                            <td>
                                @item.ItemNo
                            </td>
                            <td>
                                @item.DeliverySituation
                            </td>
                            <td>
                                @item.PaymentMethod
                            </td>
                            <td style="color:red">
                                @item.ImportItem
                            </td>
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="Project" value="@item.Project" style="width:100px;color:red" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="Project" value="@item.Project" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="Applier" value="@item.Applier" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="Applier" value="@item.Applier" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="OfGoods" value="@item.OfGoods" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="OfGoods" value="@item.OfGoods" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="TotalNo" value="@item.TotalNo" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="TotalNo" value="@item.TotalNo" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="TotalGw" value="@item.TotalGw" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="TotalGw" value="@item.TotalGw" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="TradeTerms" value="@item.TradeTerms" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="TradeTerms" value="@item.TradeTerms" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="Carrier" value="@item.Carrier" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="Carrier" value="@item.Carrier" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="PickDriver" value="@item.PickDriver" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="PickDriver" value="@item.PickDriver" disabled style="width:100px" />
                                </td>
                            }
                            @if (ViewBag.QX == null)
                            {
                                <td>
                                    <input type="text" name="DriverCard" value="@item.DriverCard" style="width:100px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="text" name="DriverCard" value="@item.DriverCard" disabled style="width:100px" />
                                </td>
                            }

                            <td>
                                <a href="@Url.RouteUrl("editetShippingListCreate", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>修改</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <pager page-value="Model.Paging"></pager>

            }
        </div>
        <div class="col-md-offset-1">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                确认创建
            </button>
        </div>
    </form>
    <script>
        $(function () {
            $('#formetShippingListCreate').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(0).find("input:checkbox");
                    var project = $(this).closest("tr").find("td").eq(5).find("input:text");
                    var applier = $(this).closest("tr").find("td").eq(6).find("input:text");
                    var ofGoods = $(this).closest("tr").find("td").eq(7).find("input:text");
                    var totalNo = $(this).closest("tr").find("td").eq(8).find("input:text");
                    var totalGw = $(this).closest("tr").find("td").eq(9).find("input:text");
                    var tradeTerms = $(this).closest("tr").find("td").eq(10).find("input:text");
                    var carrier = $(this).closest("tr").find("td").eq(11).find("input:text");
                    var pickDriver = $(this).closest("tr").find("td").eq(12).find("input:text");
                    var driverCard = $(this).closest("tr").find("td").eq(13).find("input:text");
                    //var batchNo = $(this).closest("tr").find("td").eq(13).find("input:text");
                    //var waybill = $(this).closest("tr").find("td").eq(14).find("input:text");


                    var mSub = {
                        id: id.val(),
                        project: project.val(),
                        ofGoods: ofGoods.val(),
                        totalNo: totalNo.val(),
                        totalGw: totalGw.val(),
                        tradeTerms: tradeTerms.val(),
                        carrier: carrier.val(),
                        pickDriver: pickDriver.val(),
                        driverCard: driverCard.val(),
                        applier: applier.val(),
                        //batchNo: batchNo.val(),
                       // waybill: waybill.val(),
                    };
                    subArray.push(mSub);
                });
                alert(JSON.stringify(subArray));
                var _url = "/admin/etShippingListCreate/etShippingListCreateList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        alert('提交成功！');
                    }
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转


            });

        });
    </script>
</div>
