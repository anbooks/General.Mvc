@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ImportTrans_main_record, SysCustomizedListSearchArg>

@{
    ViewData["Title"] = "运输代理";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>

            <a href="">进口运输</a>
        </li>
        <li class="active">运输代理</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>

    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itTransport" method="get" class="form-inline">

                        <label>关键字</label>
                        <input type="text" class="form-control" name="itemno" style="width:180px;" value="@Model.Paging.RouteArg.itemno" placeholder="编号" />
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发货人" />
                        <input type="text" class="form-control" name="pono" style="width:180px;" value="@Model.Paging.RouteArg.pono" placeholder="订单号" />
                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-route="itTransport" method="post" id="formitTransport" class="form-horizontal" onsubmit="return false;">
        <div class="panel panel-default">
            <div class="form-inline">
                <button class="btn btn-info btn-sm" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    确认修改
                </button>  <input type="button" id="btnSelectAll" value="全选" class="btn btn-info btn-sm" onclick="quanxuan()" />

            </div>
        </div>
        <div id='hello' style="z-index: 102; left: 240px; overflow: auto; width: 1670px;">
            <div class="form-group">
                @if (Model != null)
                {

                    <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer" style="margin-left:20px;">
                        <thead>
                            <tr>

                                <th width="50px">

                                </th>
                                <th width="150px">编号</th>
                                <th width="150px">发货人</th>
                                <th width="150px">订单号</th>
                                <th width="150px">贸易条款</th>
                                <th width="150px">货物类型</th>
                                <th width="150px">发票金额</th>
                                <th width="150px">发票币种</th>
                                <th width="150px">实际收/提货日期</th>
                                <th width="150px">件数(箱数)</th>
                                <th width="150px">毛重</th>
                                <th width="150px">箱单发票</th>
                                <th width="150px">运输状态</th>
                                <th width="150px">航班号/船名</th>
                                <th width="150px">起运港</th>
                                <th width="150px">目的港</th>
                                <th width="150px">主单号</th>
                                <th width="150px">分单号</th>
                                <th width="150px">运单附件上传</th>
                                <th width="150px">计费重量</th>
                                <th width="150px">计费重量单位</th>
                                <th width="150px">实际发运日期</th>
                                <th width="150px">实际到港日期</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Data)
                            {
                            <tr>

                                <td>
                                    <input type="checkbox" name="checkboxId" value="@item.Id" checked disabled/>
                                </td>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Shipper
                                </td>
                                <td>
                                    @item.PoNo
                                </td>
                                <td>
                                    @item.Incoterms
                                </td>
                                <td>
                                    <input type="text" name="CargoType" value="@item.CargoType" style="width:80px" />
                                </td>
                                <td>
                                    <input type="number" name="Invamou" value="@item.Invamou" step="0.00000000000001" style="width:80px" />
                                </td>
                                @if (@item.Invcurr == null)
                                {
                                    <td>
                                        @Html.DropDownList("Invcurr", ViewData["Invcurr"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.DropDownList("Invcurr", ViewData["Invcurr"] as SelectList, @item.Invcurr, new { @class = "form-control  input-small" })
                                    </td>
                                }

                                @if (@item.RealReceivingDate == null)
                                {
                                    <td>
                                        <input type="date" name="RealReceivingDate" value="@item.RealReceivingDate" />
                                    </td>}
                                else
                                {
                                    <td>
                                        <input type="date" name="RealReceivingDate" value="@item.RealReceivingDate.Value.ToString("yyyy-MM-dd")" />
                                    </td>}
                                <td>
                                    <input type="number" name="Pcs" value="@item.Pcs" step="0.00000000000001" style="width:80px" />
                                </td>
                                <td>
                                    <input type="number" name="Gw" value="@item.Gw" step="0.00000000000001" style="width:80px" />
                                </td>
                                <td>
                                    @if (@item.InventoryAttachment != null)
                                    {
                                        <a href="@Url.RouteUrl("editITTransport", new { id = item.Id })" class="btn btn-xs btn-danger btnDelete"><i class="fa fa-bolt"></i>上传附件</a>
                                        <a href="@Url.RouteUrl("TransportAttachment", new { id = item.Id })" class="btn btn-xs btn-info"><i class="fa fa-bolt"></i>下载附件</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.RouteUrl("editITTransport", new { id = item.Id })" class="btn btn-xs btn-danger btnDelete"><i class="fa fa-bolt"></i>上传附件</a>
                                       
                                    }
                                </td>
                                @if (@item.Status == null)
                                {
                                    <td>
                                        @Html.DropDownList("Status", ViewData["Status"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.DropDownList("Status", ViewData["Status"] as SelectList, @item.Status, new { @class = "form-control  input-small" })
                                    </td>
                                }
                                <td>
                                    <input type="text" name="FlighVessel" value="@item.FlighVessel" style="width:80px" />
                                </td>
                                <td>
                                    <input type="text" name="Origin" value="@item.Origin" style="width:80px" />
                                </td>
                                <td>
                                    <input type="text" name="Dest" value="@item.Dest" style="width:80px" />
                                </td>
                                <td>
                                    <input type="text" name="Mbl" value="@item.Mbl" style="width:80px" />
                                </td>
                                <td>
                                    <input type="text" name="Hbl" value="@item.Hbl" style="width:80px" />
                                </td>
                                <td>
                                    @if (@item.HblAttachment != null && @item.HblAttachment != "" && @item.MblAttachment != null && @item.MblAttachment != "")
                                    {
                                        <a href="@Url.RouteUrl("editITTransport", new { id = item.Id })" class="btn btn-xs btn-danger btnDelete"><i class="fa fa-bolt"></i>上传附件</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.RouteUrl("editITTransport", new { id = item.Id })" class="btn btn-xs btn-danger btnDelete"><i class="fa fa-bolt"></i>上传附件</a>
                                        <a href="@Url.RouteUrl("TransportAttachment", new { id = item.Id })" class="btn btn-xs btn-info"><i class="fa fa-bolt"></i>下载附件</a>
                                    }
                                </td>
                                <td>
                                    <input type="number" name="Measurement" value="@item.Measurement" step="0.00000000000001" style="width:80px" />
                                </td>
                                <td>
                                    <input type="text" name="MeasurementUnit" value="@item.MeasurementUnit" style="width:80px" />
                                </td>
                                @if (@item.Atd == null)
                                {
                                    <td>
                                        <input type="date" name="Atd" value="@item.Atd" />
                                    </td>}
                                else
                                {
                                    <td>
                                        <input type="date" name="Atd" value="@item.Atd.Value.ToString("yyyy-MM-dd")" />
                                    </td>}
                                @if (@item.Ata == null)
                                {
                                    <td>
                                        <input type="date" name="Ata" value="@item.Atd" />
                                    </td>}
                                else
                                {
                                    <td>
                                        <input type="date" name="Ata" value="@item.Ata.Value.ToString("yyyy-MM-dd")" />
                                    </td>}
                                @if (@item.F_ShippingModeGiven != true)
                                {
                                    <td>
                                        <a href="@Url.RouteUrl("itTransportSchedule", new { id = item.Id })" class="btn btn-xs btn-danger btnDelete"><i class="fa fa-bolt"></i>查看明细表</a>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a href="@Url.RouteUrl("itTransportSchedule", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>查看明细表</a>
                                    </td>
                                }

                            </tr>
                            }
                        </tbody>
                    </table>
                    <pager page-value="Model.Paging"></pager>

                }
            </div>
        </div>
    </form>
    <style>
        /*谷歌*/
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
        }
        /*火狐*/
        input[type="number"] {
            -moz-appearance: textfield;
        }
    </style>
    <script>
        function quanxuan() {
            var obj = document.getElementById("btnSelectAll");
            if (obj.value == "全选") {
                $("input:checkbox").prop("checked", true);//全部设置为选中
                obj.value = "取消全选"
            }
            else {
                $("input:checkbox").prop("checked", false);//全部设置为未选中
                obj.value = "全选"
            }
        }
    </script>
    <script>
        $(function () {
            $('#formitTransport').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(0).find("input:checkbox");
                    var incoterms = $(this).closest("tr").find("td").eq(4).find("input:text");
                    var cargotype = $(this).closest("tr").find("td").eq(5).find("input:text");
                    var invamou = $(this).closest("tr").find("td").eq(6).find("input:data");
                    var invcurr = $(this).closest("tr").find("td").eq(7).find("select[name='Invcurr']");
                    var realreceivingdate = $(this).closest("tr").find("td").eq(8).find("input:data");
                    var pcs = $(this).closest("tr").find("td").eq(9).find("input:data");
                    var gw = $(this).closest("tr").find("td").eq(10).find("input:data");
                    var status = $(this).closest("tr").find("td").eq(12).find("select[name='Status']");
                    var flighvessel = $(this).closest("tr").find("td").eq(13).find("input:text");
                    var origin = $(this).closest("tr").find("td").eq(14).find("input:text");
                    var dest = $(this).closest("tr").find("td").eq(15).find("input:text");
                    var mbl = $(this).closest("tr").find("td").eq(16).find("input:text");
                    var hbl = $(this).closest("tr").find("td").eq(17).find("input:text");
                    var measurement = $(this).closest("tr").find("td").eq(19).find("input:data");
                    var measurementunit = $(this).closest("tr").find("td").eq(20).find("input:text");
                    var atd = $(this).closest("tr").find("td").eq(21).find("input:data");
                    var ata = $(this).closest("tr").find("td").eq(22).find("input:data");
                    var mSub = {
                        id: id.val(),
                        incoterms: incoterms.val(),
                        cargotype: cargotype.val(),
                        invamou: invamou.val(),
                        invcurr: invcurr.val(),
                        realreceivingdate: realreceivingdate.val(),
                        pcs: pcs.val(),
                        gw: gw.val(),
                        status: status.val(),
                        flighvessel: flighvessel.val(),
                        origin: origin.val(),
                        dest: dest.val(),
                        mbl: mbl.val(),
                        hbl: hbl.val(),
                        measurement: measurement.val(),
                        measurementunit: measurementunit.val(),
                        atd: atd.val(),
                        ata: ata.val(),
                    };
                    subArray.push(mSub);
                });
                alert(JSON.stringify(subArray));
                var _url = "/admin/itTransport/itTransportList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        var rs = data;
                        if (rs.status == true) {
                            alert('提交成功！');
                        } else {
                            alert('提交失败！数据有误！！！');
                            window.parent.location.reload();
                        }
                    }
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转
            });
        });
    </script>
</div>


