@using General.Entities
@model ProcurementPlanMain
@{
    ViewData["Title"] = "编辑采购计划";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li><a href="@ViewBag.ReturnUrl">系统用户列表</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-route="editITProcurementPlanMain" enctype="multipart/form-data" method="post" class="form-horizontal">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">@Html.RequiredSpan()采购计划编号</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" asp-for="PlanItem" placeholder="采购计划编号" />
                    </div>
                    <span class="inline text-danger" asp-validation-for="PlanItem"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">采购计划发货人</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="Prepare" class="form-control" placeholder="采购计划发货人" />
                    </div>
                    <span asp-validation-for="Prepare" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">项目</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="Project" class="form-control" placeholder="项目" />
                    </div>
                    <span asp-validation-for="Project" class="inline text-danger "></span>
                </div>
                @if (ViewBag.fw!=1)
                {
                    <div class="form-group">
                        <div class="col-sm-2 control-label no-padding-right">附件</div>
                        <div class="col-sm-3">
                            <input type="file" name="excelfile" />
                        </div>
                    </div>     
                  }

                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        提交
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>