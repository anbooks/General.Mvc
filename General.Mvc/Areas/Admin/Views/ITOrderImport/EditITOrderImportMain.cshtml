@using General.Entities
@model OrderMain
@{
    ViewData["Title"] = "编辑订单";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li><a href="@ViewBag.ReturnUrl">系统用户列表</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-route="importexcelorder" enctype="multipart/form-data" method="post" class="form-horizontal">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">@Html.RequiredSpan()订单号</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" asp-for="OrderNo" placeholder="订单号" />
                    </div>
                    <span class="inline text-danger" asp-validation-for="OrderNo"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">订单确认日期</label>
                    <div class="col-sm-3">
                        <input type="date" asp-for="OrderConfirmDate" class="form-control" placeholder="订单确认日期" />
                    </div>
                    <span asp-validation-for="OrderConfirmDate" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">订单签订人</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="OrderSigner" class="form-control" value="@ViewBag.Person" placeholder="订单签订人" />
                    </div>
                    <span asp-validation-for="OrderSigner" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">签订人胸卡号</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="SignerCard" class="form-control" value="@ViewBag.Card" placeholder="签订人胸卡号" />
                    </div>
                    <span asp-validation-for="SignerCard" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">供应商代码</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="SupplierCode" class="form-control" placeholder="供应商代码" />
                    </div>
                    <span asp-validation-for="SupplierCode" class="inline text-danger "></span>
                </div>
                @if (ViewBag.Id != null)
                {<div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">供应商名称</label>
                        <div class="col-sm-3">
                            <input type="text" asp-for="SupplierName" class="form-control" placeholder="供应商名称" />
                        </div>
                        <span asp-validation-for="SupplierName" class="inline text-danger "></span>
                    </div>
                }
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">付款方式</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="Payment" class="form-control" placeholder="付款方式" />
                    </div>
                    <span asp-validation-for="Payment" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">长协号</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="LongDealNo" class="form-control" placeholder="长协号" />
                    </div>
                    <span asp-validation-for="LongDealNo" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">打码号</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="CodeNo" class="form-control" placeholder="打码号" />
                    </div>
                    <span asp-validation-for="CodeNo" class="inline text-danger "></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">贸易条款</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="TradeTerms" class="form-control" placeholder="贸易条款" />
                    </div>
                    <span asp-validation-for="TradeTerms" class="inline text-danger "></span>
                </div>
                @if (ViewBag.tran != null)
                {<div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">运输代理</label>
                        <div class="col-sm-3">
                            <select asp-for="Transport" class="form-control" asp-items="ViewBag.Transport"></select>
                        </div>
                        <span asp-validation-for="Transport" class="inline text-danger "></span>
                    </div> }
                else
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">运输代理</label>
                        <div class="col-sm-3">
                            @Html.DropDownList("Transport", ViewData["Transport"] as SelectList, "-请选择运输代理-", new { @class = "form-control" })
                        </div>
                        <span asp-validation-for="Transport" class="inline text-danger"></span>
                    </div>
                }

                @if (ViewBag.Id != null)
                {<div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">项目</label>
                        <div class="col-sm-3">
                            <input type="text" asp-for="Project" class="form-control" placeholder="项目" />
                        </div>
                        <span asp-validation-for="Project" class="inline text-danger "></span>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">物料类别</label>
                        <div class="col-sm-3">
                            <input type="text" asp-for="MaterialCategory" class="form-control" placeholder="物料类别" />
                        </div>
                        <span asp-validation-for="MaterialCategory" class="inline text-danger "></span>
                    </div>
                }
                @if (ViewBag.Id == null)
                {
                    <div class="form-group">
                        <div class="col-sm-2 control-label no-padding-right">附件</div>
                        <div class="col-sm-3">
                            <input type="file" name="excelfile" />
                        </div>
                    </div>
                }
                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        提交
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>