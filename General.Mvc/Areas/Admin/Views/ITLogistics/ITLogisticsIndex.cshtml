@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ImportTrans_main_record, SysCustomizedListSearchArg>
@{
    ViewData["Title"] = "物流员";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>
            <a href="">进口运输</a>
        </li>
        <li class="active">物流员</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a asp-route="editITShipmentCreate" class="btn btn-sm btn-pink"><i class="glyphicon glyphicon-plus"></i>添加</a>
        </div>
    </div>
    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itLogistics" method="get" class="form-inline">
                        <label>关键字</label>
                        <input type="text" class="form-control" name="itemno" style="width:180px;" value="@Model.Paging.RouteArg.itemno" placeholder="编号" />
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发货人" />
                        <input type="text" class="form-control" name="pono" style="width:180px;" value="@Model.Paging.RouteArg.pono" placeholder="合同号" />
                         <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <form asp-route="itLogistics" method="post" id="formitLogistics" class="form-horizontal" onsubmit="return false;">
        <div id='hello' style="z-index: 102; left: 240px; overflow: auto; width: 1670px;">
            <div class="form-group">
                @if (Model != null)
                {
                    <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
                        <thead>
                            <tr>
                                <th width="60px"></th>
                                <th width="50px"></th>
                                <th width="150px">编号</th>
                                <th width="150px">发货人</th>
                                <th width="150px">合同号</th>
                                <th width="150px">贸易条款</th>
                                <th width="150px">货物类型</th>
                                <th width="150px">发票金额</th>
                                <th width="150px">发票币种</th>
                                <th width="150px">实际收/提货日期</th>
                                <th width="150px">件数(箱数)</th>
                                <th width="150px">毛重</th>
                                <th width="150px">运输方式</th>
                                <th width="150px">要求送货日期</th>
                                <th width="150px">口岸报关行</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                            <tr>
                                <td>
                                    <a href="@Url.RouteUrl("editITLogistics", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>修改</a>
                                </td>
                                <td>
                                    <input type="checkbox" name="checkboxId" value="@item.Id" />
                                </td>
                                <td>@item.Itemno</td>
                                <td>@item.Shipper</td>
                                <td>@item.PoNo</td>
                                <td>@item.Incoterms</td>
                                <td>@item.CargoType</td>
                                <td>@item.Invamou</td>
                                <td>@item.Invcurr</td>
                                <td>@item.RealReceivingDate</td>
                                <td>@item.Pcs</td>
                                <td>@item.Gw</td>
                                @if (ViewBag.QX == "01")
                                {
                                    @if (@item.Status == null)
                                    {
                                        <td>
                                            @Html.DropDownList("ShippingMode", ViewData["ShippingMode"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.DropDownList("ShippingMode", ViewData["ShippingMode"] as SelectList, @item.ShippingMode, new { @class = "form-control  input-small" })
                                        </td>
                                    }
                                }
                                else
                                {
                                    <td>
                                        <input type="text" name="ShippingMode" value="@item.ShippingMode" disabled style="width:80px" />
                                    </td>
                                }
                                @if (ViewBag.QX == "01")
                                {
                                    @if (@item.DeliveryRequiredDate == null)
                                    {
                                        <td>
                                            <input type="date" name="DeliveryRequiredDate" value="@item.DeliveryRequiredDate" />
                                        </td>}
                                    else
                                    {
                                        <td>
                                            <input type="date" name="DeliveryRequiredDate" value="@item.DeliveryRequiredDate.Value.ToString("yyyy-MM-dd")" />
                                        </td>}
                                }
                                else
                                {
                                    <td>
                                        <input type="datetime" name="Atd" value="@item.DeliveryRequiredDate" disabled />
                                    </td>
                                }
                                @if (ViewBag.QX == "01")
                                {
                                    <td>
                                        <input type="text" name="Forwarder" value="@item.Forwarder" style="width:80px" />
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <input type="text" name="Forwarder" value="@item.Forwarder" disabled style="width:80px" />
                                    </td>
                                }
                                <td>
                                    <a href="@Url.RouteUrl("itLogisticsSchedule", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>查看明细表</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <pager page-value="Model.Paging"></pager>
                }
            </div>
        </div>
        <div class="col-md-offset-1">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                确认创建
            </button>
        </div>
    </form>
    <script>
        $(function () {
            $('#formitLogistics').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {                
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(1).find("input:checkbox");
                   var shippingMode = $(this).closest("tr").find("td").eq(12).find("select[name='ShippingMode']");
                    var deliveryRequiredDate = $(this).closest("tr").find("td").eq(13).find("input:data");
                    var forwarder = $(this).closest("tr").find("td").eq(14).find("input:text");
                    var mSub = {
                        id: id.val(),
                        shippingMode: shippingMode.val(),
                        deliveryRequiredDate: deliveryRequiredDate.val(),
                        forwarder: forwarder.val(),
                    };
                    subArray.push(mSub);
                });
                alert(JSON.stringify(subArray));
                var _url = "/admin/itLogistics/itLogisticsList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        alert('提交成功！');
                    } 
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转
            });
        });
    </script>
</div>


