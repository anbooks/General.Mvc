@using General.Framework.Menu
@using General.Framework.Datatable
@using General.Entities
@model DataSourceResult<ImportTrans_main_record, SysCustomizedListSearchArg>
@{
    ViewData["Title"] = "物流员";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li>
            <a href="">进口运输</a>
        </li>
        <li class="active">物流员</li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
   
    <div class="space-2"></div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="itLogistics" method="get" class="form-inline">
                        <label>关键字</label>
                        <input type="text" class="form-control" name="itemno" style="width:180px;" value="@Model.Paging.RouteArg.itemno" placeholder="编号" />
                        <input type="text" class="form-control" name="shipper" style="width:180px;" value="@Model.Paging.RouteArg.shipper" placeholder="发货人" />
                        <input type="text" class="form-control" name="pono" style="width:180px;" value="@Model.Paging.RouteArg.pono" placeholder="订单号" />
                        <button type="submit" class="btn btn-purple btn-sm">
                            查询
                            <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <form asp-route="itLogistics" method="post" id="formitLogistics" class="form-horizontal" onsubmit="return false;">
        <div class="panel panel-default">
            <div class="form-inline">
                <button class="btn btn-info btn-sm" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    确认修改
                </button> <input type="button" id="btnSelectAll" value="全选" class="btn btn-info btn-sm" onclick="quanxuan()" />
            </div>
        </div>
        <div id='hello' style="z-index: 102; left: 240px; overflow: auto; width: 1670px;">
            <div class="form-group">
                @if (Model != null)
                {
                    <table id="user_datatable" class="table table-striped table-bordered table-hover dataTable no-footer" style="margin-left:20px;">
                        <thead>
                            <tr>
                                <th width="30px"></th>
                                <th width="100px">编号</th>
                                <th width="100px">发货人</th>
                                <th width="100px">订单号</th>
                                <th width="100px">贸易条款</th>
                                <th width="100px">货物类型</th>
                                <th width="100px">发票金额</th>
                                <th width="60px">发票币种</th>
                                <th width="60px">实际收/提货日期</th>
                                <th width="60px">件数(箱数)</th>
                                <th width="60px">毛重</th>
                                <th width="100px">运输方式</th>
                                <th width="100px">送货要求</th>
                                <th width="100px">口岸报关行</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                            <tr>
                                <td>
                                    <input type="checkbox" name="checkboxId" value="@item.Id" checked disabled/>
                                </td>
                                <td>@item.Id</td>
                                <td>@item.Shipper</td>
                                <td>@item.PoNo</td>
                                <td>@item.Incoterms</td>
                                <td>@item.CargoType</td>
                                <td>@item.Invamou</td>
                                <td>@item.Invcurr</td>
                                <td>@item.RealReceivingDate</td>
                                <td>@item.Pcs</td>
                                <td>@item.Gw</td>

                                @if (@item.ShippingMode == null)
                                {
                                    <td>
                                        @Html.DropDownList("ShippingMode", ViewData["ShippingMode"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.DropDownList("ShippingMode", ViewData["ShippingMode"] as SelectList, @item.ShippingMode, new { @class = "form-control  input-small" })
                                    </td>
                                }

                                
                                @if (@item.DeliveryRequiredDate == null)
                                {
                                        <td>
                                            @Html.DropDownList("DeliveryRequiredDate", ViewData["DeliveryRequiredDate"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                        </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.DropDownList("DeliveryRequiredDate", ViewData["DeliveryRequiredDate"] as SelectList, @item.DeliveryRequiredDate, new { @class = "form-control  input-small" })
                                    </td>
                                }
                                @if (@item.ShippingMode == null)
                                {
                                    @if (@item.Dest != null && @item.Forwarder == null)
                                    {
                                        <td style="width:80px;background-color:red">
                                            @Html.DropDownList("PorkCustoms", ViewData["PorkCustoms"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.DropDownList("PorkCustoms", ViewData["PorkCustoms"] as SelectList, "-请选择-", new { @class = "form-control  input-small" })
                                        </td>
                                    }
                                }
                                else
                                {
                                    <td>
                                        @Html.DropDownList("PorkCustoms", ViewData["PorkCustoms"] as SelectList, @item.Forwarder, new { @class = "form-control  input-small" })
                                    </td>
                                }

                                @if (@item.F_ShippingModeGiven != true)
                                {
                                    <td>
                                        <a href="@Url.RouteUrl("itLogisticsSchedule", new { id = item.Id })" class="btn btn-xs btn-danger btnDelete"><i class="fa fa-bolt"></i>查看明细表</a>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a href="@Url.RouteUrl("itLogisticsSchedule", new { id = item.Id })" class="btn btn-xs btn-purple"><i class="fa fa-bolt"></i>查看明细表</a>
                                    </td>
                                }

                            </tr>
                            }
                        </tbody>
                    </table>
                    <pager page-value="Model.Paging"></pager>
                }
            </div>
        </div>
    </form>
    <script>
        function quanxuan() {
            var obj = document.getElementById("btnSelectAll");
            if (obj.value == "全选") {
                $("input:checkbox").prop("checked", true);//全部设置为选中
                obj.value = "取消全选"
            }
            else {
                $("input:checkbox").prop("checked", false);//全部设置为未选中
                obj.value = "全选"
            }
        }
    </script>
    <script>
        $(function () {
            $('#formitLogistics').submit(function () {
                var form = $(this);
                var subArray = [];
                $("input[name='checkboxId']:checked").each(function () {
                    var test = $(this).next();
                    var i = 0;
                    var id = $(this).closest("tr").find("td").eq(0).find("input:checkbox");
                    var shippingMode = $(this).closest("tr").find("td").eq(11).find("select[name='ShippingMode']");
                    var deliveryRequiredDate = $(this).closest("tr").find("td").eq(12).find("select[name='DeliveryRequiredDate']");
                    var forwarder = $(this).closest("tr").find("td").eq(13).find("input:text");
                    var mSub = {
                        id: id.val(),
                        shippingMode: shippingMode.val(),
                        deliveryRequiredDate: deliveryRequiredDate.val(),
                        forwarder: forwarder.val(),
                    };
                    subArray.push(mSub);
                });
                alert(JSON.stringify(subArray));
                var _url = "/admin/itLogistics/itLogisticsList"
                form.ajaxSubmit({
                    type: 'post', // 提交方式 get/post
                    url: _url, // 需要提交的 url
                    dataType: "json", //数据类型 注意这里！！！！！
                    data: { "kevin": JSON.stringify(subArray) },
                    success: function (data) { // data 保存提交后返回的数据，一般为 json 数据
                        // 此处可对 data 作相关处理
                        var rs = data;
                        if (rs.status == true) {
                            alert('提交成功！');
                        } else {
                            alert('提交失败！数据有误！！！');
                            window.parent.location.reload();
                        }
                    }
                });
                return false; // 阻止表单自动提交事件，必须返回false，否则表单会自己再做一次提交操作，并且页面跳转
            });
        });
    </script>
</div>


